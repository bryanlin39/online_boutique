<h2>Sign In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "ui form"}) do |f| %>
  <div class="field">
    <%= f.label 'Email or Username' %>
    <%= f.text_field :login, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Sign In", class: "ui primary basic button" %>
  </div>
<% end %>

<div class="ui horizontal divider">Links</div>

<%= render "devise/shared/links" %>
